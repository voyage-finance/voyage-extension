{
  "name": "Voyage Extension",
  "description": "Enables playing/buy through your Voyage vault!",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": "icon.png"
  },
  "background": { "service_worker": "background.bundle.js" },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.bundle.js"]
    }
  ],
  "icons": { "128": "icon.png" },
  "permissions": ["activeTab", "storage", "tabs", "notifications"],
  "web_accessible_resources": [
    { "resources": ["injector.bundle.js"], "matches": ["<all_urls>"] }
  ],
  "externally_connectable": {
    "matches": ["*://localhost/*", "*://voyage.finance/*"]
  }
}
