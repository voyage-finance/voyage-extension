{
  "name": "Voyage Extension",
  "description": "Enables playing/buy through your Voyage vault!",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": { "service_worker": "background.bundle.js" },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["contentScript.bundle.js"]
  }],
  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": { "128": "icon.png" },
  "permissions": ["activeTab", "storage", "scripting", "tabs", "identity"],
  "web_accessible_resources": [{ "resources": ["injector.bundle.js"], "matches": ["<all_urls>"] }]
}
